.imgcontainer:hover .imgbutton
  opacity: 1

a:hover
  background-color: transparent

.animateaccept
  background-color: #5dbef2
  outline: none
  border-radius: 5px
  border-color: transparent
  color: white
  font-size: 15pt
  padding: 5px 15px
  transition: all 0.3s
  span
    cursor: pointer
    display: inline-block
    position: relative
    transition: 0.3s
    &:after
      position: absolute
      opacity: 0
      top: 0
      right: -20px
      transition: 0.3s
  &:hover span
    padding-right: 5px
    &:after
      opacity: 1
      right: 0

.animatereject
  background-color: transparent
  outline: none
  border-radius: 5px
  border-color: #5dbef2
  color: #5dbef2
  font-size: 15pt
  padding: 5px 15px
  border-style: solid
  span
    cursor: pointer
    display: inline-block
    position: relative
    transition: 0.3s
    &:after
      position: absolute
      opacity: 0
      top: 0
      right: -20px
      transition: 0.3s
  &:hover span
    padding-right: 5px
    &:after
      opacity: 1
      right: 0