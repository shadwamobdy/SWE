#search
  height: 6px
  border-box: box-sizing
  background-image: url(<%= asset_path 'searchicon.png' %>)
  background-position: 8px 6px
  background-repeat: no-repeat
  font-size: 16px
  padding: 14px 20px 12px 45px
  border: none
  float: left

input
  &[type=text]
    width: 200px
    height: 20px
    -webkit-transition: width 0.4s ease-in-out
    transition: width 0.4s ease-in-out
    &:focus
      width: 50%
  &[type="submit"]
    font-size: 100%
    height: 25px
    width: 90px
    color: darkorange
    background: transparent
    border-color: darkorange


.button__badge
  background-color: #fa3e3e
  border-radius: 2px
  color: white
  padding: 1px 3px
  font-size: 10px
  position: absolute
