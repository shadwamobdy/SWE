.dropdown-notify-content
  overflow: none
  background: linear-gradient(to bottom, #6699ff -1000%, #f9f9f9 95%)
  background-repeat: no-repeat
  background-attachment: fixed
  border-radius: 5px
  position: absolute
  min-width: 400px
  right: 80px
  top: 50px
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2)
  z-index: 1
  float: none
  color: black
  padding: 12px 16px
  text-decoration: none
  display: none
  text-align: left
  a
    float: none
    color: black
    padding: 12px 16px
    text-decoration: none
    display: block
    text-align: left
    &:hover
      background-color: #e3e3e3
      border-radius: 10px

.show-notify
  display: block

.dropdown-notify-content
  &:before
    bottom: 99%
    left: 102%
    border: solid transparent
    border-radius: 5px
    content: " "
    height: 0
    width: 0
    position: absolute
    pointer-events: none
  &:before
    border-color: rgba(194, 225, 245, 0)
    border-bottom-color: #eef2f9
    border-width: 9px
    margin-left: -36px

.navbar-inverse .navbar-toggle
  &:hover, &:focus
    background-color: #5dbef2
    border-color: white

.navbar-inverse .navbar-toggle
    background-color: #5dbef2
    border-color: white

.navbar-inverse .navbar-collapse, .navbar-inverse .navbar-form
